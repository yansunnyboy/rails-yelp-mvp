<h1>Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to("#{restaurant.name}", restaurant_path(restaurant.id)) %></h2>
  <%= link_to "Delete",
            restaurant_path(restaurant.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>
